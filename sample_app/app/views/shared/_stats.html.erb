<% @user ||= current_user %>
<div class="stats">
  <table summary="User stats">
    <tr>
      <td>
        <a href="<%= following_user_path(@user) %>">
          <span id="following" class="stat">
          	<%= @user.following.count>0 ? pluralize(@user.following.count, "auteur suivi", "auteurs suivis") : "0 auteur suivi"%>
          </span>
        </a>
      </td>
      <td>
        <a href="<%= followers_user_path(@user) %>">
          <span id="followers" class="stat">          	
            <%= @user.followers.count>0 ? pluralize(@user.followers.count, "lecteur") : "0 lecteur"%>
          </span>
        </a>
      </td>
    </tr>
  </table>
</div>