<%= form_for @micropost do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <%= javascript_include_tag :micro_message_count_character %>
  <div class="field message">
	<div class="counter"></div>
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit "Soumettre" %>
  </div>
<% end %>